<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="rms.monsterbank.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Register"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:id="@+id/button"
                android:background="#00000000"
                android:onClick="startRegistrationFormEvent"
                                android:textColor="#FA7508" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@mipmap/mosnterlogo"
            android:id="@+id/imageView2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.69">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:weightSum="1"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="254dp"
                    android:layout_height="49dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_marginTop="22dp"
                    android:id="@+id/usernameField"
                    android:hint="Username "
                    android:alpha="0.5"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_vertical|center" />



                <EditText
                    android:layout_width="254dp"
                    android:ems="10"
                    android:layout_marginTop="22dp"
                    android:id="@+id/passwordField"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:alpha="0.5"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_vertical|center"
                    android:layout_weight="0.18"
                    android:layout_height="49dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.05"
            android:gravity="center_horizontal">

            <Button
                android:text="@string/orangeOk"
                android:layout_width="149dp"
                android:layout_height="37dp"
                android:id="@+id/button4"
                android:alpha="0.8"
                android:background="@drawable/orangebutton"
                android:onClick="startDashboard"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
